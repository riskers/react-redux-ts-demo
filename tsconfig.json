{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "components": ["/components"],
            "pages": ["/pages"],
        },
        "outDir": "./dist/",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "lib":[
            "es2015",
            "dom"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": ["dist", "node_modules"],
    "include": [
        "./src/**/*"
    ]
}